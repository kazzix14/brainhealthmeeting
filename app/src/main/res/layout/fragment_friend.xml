<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/simple_profile_photo"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/simple_profile_photo_description"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/simple_profile_name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/simple_profile_photo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        tools:text="@tools:sample/first_names" />

    <TextView
        android:id="@+id/simple_profile_age"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/simple_profile_name"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/simple_profile_photo"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#000000"
        tools:text="@tools:sample/full_names" />
</RelativeLayout>
